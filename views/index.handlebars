<div class="jumbotron" >
  <div class="container" style="background-image: url('/assets/images/burger.jpeg')">
    <h1 class="display-4" style="text-align:center;color:white;font-weight:300;font-style:italic">Hungry????</h1>
    <p class="lead" style="text-align: center;color:white;font-style:italic">Enjoy the delicious burgers</p>
  </div>

<div class="row">
  <div class="column" id="addABurgerCol">
    <form class="create=form">
      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>
      <button type="submit" id="submitButton">Add</button>
    </form>

  </div>
  <div class="column" id="avableBurgerCol">
    <ul>
      {{#each burgers}}
             {{#unless devoured}}
                      {{>burgers/burger-block}}
             {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="column" id="devouredBurgerCol">
   <ul>
     {{#each burgers}}
        {{#if devoured}}
         {{>burgers/ate-burgers}}
        {{/if}}
          
     {{/each}}
   </ul>
  </div>

</div>



</div>

